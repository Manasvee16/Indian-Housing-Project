{
  "version": 2,
  "buildCommand": "pip install -r requirements.txt",
  "builds": [
    { 
      "src": "api.py", 
      "use": "@vercel/python@3.1.0",
      "config": { "pythonVersion": "3.10" }
    }
  ],
  "env": {
    "PYTHON_VERSION": "3.10"
  },
  "routes": [
    { "src": "/(.*)", "dest": "api.py" }
  ]
}